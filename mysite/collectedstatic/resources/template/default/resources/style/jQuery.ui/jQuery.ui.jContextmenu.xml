<jQueryUi>

	<jContextmenu>

		<images>../images/</images>

		<config>
			<add key="listTemplate"><![CDATA[<li><a href="javascript:;" focus="this.blur()">{menu}</a></li>]]></add>
			<add key="listTemplateMore"><![CDATA[<li class="more"><a href="javascript:;" focus="this.blur()">{menu}</a></li>]]></add>
			<add key="space" value="space"></add>
			<add key="more" value="more"></add>
			<add key="list" value=".jqe-ui-jContextmenu-contextmenu ul"></add>
			<add key="top" value="2"></add>
			<add key="left" value="5"></add>
		</config>

		<style>
			<![CDATA[
				.jqe-ui-jContextmenu-contextmenu{float:left;border:solid 1px #ccc;background:#FFF;position:relative;z-index:999999;-webkit-box-shadow:2px 2px 10px #666;-moz-box-shadow:2px 2px 10px #666;box-shadow:2px 2px 10px #666;}
				.jqe-ui-jContextmenu-contextmenu ul{width:138px;float:left;margin:0;padding:1px;width:100%;}
				.jqe-ui-jContextmenu-contextmenu ul li{width:138px;padding:0;margin:0;}
				.jqe-ui-jContextmenu-contextmenu ul li.space{border-top:solid 1px #CCC;margin-top:5px;padding-top:5px;}
				.jqe-ui-jContextmenu-contextmenu ul li.more{background:url({images}contextmenu-more.png) no-repeat right center;}
				.jqe-ui-jContextmenu-contextmenu ul li.more a:hover{background:url({images}contextmenu-more-white.png) no-repeat right center #348ccc;color:#fff;}
				.jqe-ui-jContextmenu-contextmenu ul li a{display:block;width:100%;color:#000;height:25px;line-height:25px;text-indent:20px;text-decoration:none;}
				.jqe-ui-jContextmenu-contextmenu ul li a:hover{background-color:#348ccc;color:#fff;}
			]]>
		</style>

		<body>
			<![CDATA[	
				<div class="jqe-ui-jContextmenu-contextmenu">
					<ul></ul>
				</div>
			]]>
		</body>

	</jContextmenu>

</jQueryUi>